# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET	    /twitter/add/:id			controllers.Application.add(id: String)
GET     /twitter/all                controllers.Application.list(p:Int ?= 0, s ?= "screenName", o ?= "asc")
GET  	/twitter/users				controllers.Application.users(query ?= "friends: mscheidgen", cursor:Long ?= -1)
GET		/twitter/ajaxUsers			controllers.Application.ajaxUsers(query: String, cursor: Long)
GET 	/twitter/importAll			controllers.Application.importAll(query: String)
GET 	/log						controllers.Application.log()

POST 	/twitter/update				controllers.Application.update()
POST 	/twitter/follow				controllers.Application.follow()
POST 	/twitter/unfollow			controllers.Application.unFollow()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
